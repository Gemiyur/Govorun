<Window x:Class="Govorun.Dialogs.BookInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Govorun.Dialogs"
        mc:Ignorable="d"
        Title="О книге"
        Width="600" Height="500" ResizeMode="CanResizeWithGrip"
        MinWidth="500" MinHeight="350"
        d:Width="600" d:Height="350"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="75" />
                <Setter Property="Height" Value="25" />
            </Style>
            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                <Setter Property="IsReadOnly" Value="True" />
                <Setter Property="IsReadOnlyCaretVisible" Value="True" />
                <Setter Property="Margin" Value="0,4,0,0" />
                <!--<Setter Property="Background" Value="AliceBlue" />-->
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Авторы и название -->
        <TextBlock Grid.Row="0" x:Name="AuthorsTextBlock" Text="Авторы" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="1" x:Name="TitleTextBlock" Text="Название"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0" />

        <!-- Чтец и продолжительность -->
        <Grid Grid.Row="2" Margin="8,10,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Читает:" Margin="0,0,5,0" />
                <TextBlock x:Name="LectorTextBlock" Text="Авторы" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Продолжительность:" Margin="0,0,5,0" />
                <TextBlock x:Name="DurationTextBlock" Text="000:00:00" />
            </StackPanel>
        </Grid>

        <!-- Аннотация -->
        <GroupBox Grid.Row="3" Header="Аннотация" Margin="0,10,0,0">
            <TextBox x:Name="AnnotationTextBox"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Style="{StaticResource TextBoxStyle}" />
        </GroupBox>

        <!-- Файл -->
        <GroupBox Grid.Row="4" Header="Файл" Margin="0,10,0,0">
            <TextBox x:Name="FileTextBox"
                     Style="{StaticResource TextBoxStyle}" />
        </GroupBox>

        <!-- Кнопки -->
        <Grid Grid.Row="5" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="ListenButton" Content="Слушать"
                    HorizontalAlignment="Left"
                    Style="{StaticResource ButtonStyle}"
                    Click="ListenButton_Click" />
            <Button Grid.Column="1" x:Name="CloseButton" Content="Закрыть"
                    HorizontalAlignment="Right"
                    IsCancel="True"
                    Style="{StaticResource ButtonStyle}"
                    Click="CloseButton_Click" />
        </Grid>
    </Grid>
</Window>
