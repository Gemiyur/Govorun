<Window x:Class="Govorun.Dialogs.BookEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Govorun.Dialogs"
        mc:Ignorable="d"
        Title="Книга"
        Width="800" Height="500" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="EditorButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="75" />
                <Setter Property="Height" Value="20" />
            </Style>
            <Style x:Key="BottomButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="90" />
                <Setter Property="Height" Value="25" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10" >
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Редактор -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Название -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Название" VerticalAlignment="Center" />
                <TextBox Grid.Row="1" Grid.Column="0"
                         x:Name="TitleTextBox"
                         VerticalAlignment="Center"
                         Margin="0,4,0,0"
                         Text="Поиск предназначения, или Двадцать седьмая теорема этики" />
            </Grid>
            <!-- Авторы -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Авторы" Margin="0,0,0,4" />
                <ListBox Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"
                         x:Name="AuthorsListBox"
                         Height="65"
                         Margin="0,0,10,0">
                    
                </ListBox>
                <Button Grid.Row="1" Grid.Column="1"
                        x:Name="PickAuthorButton" Content="Выбрать"
                        Style="{StaticResource EditorButtonStyle}"
                        VerticalAlignment="Top" />
                <Button Grid.Row="2" Grid.Column="1"
                        x:Name="RemoveAuthorButton" Content="Удалить"
                        Style="{StaticResource EditorButtonStyle}"
                        VerticalAlignment="Bottom" />
            </Grid>
            <!-- Новый автор -->
            <GroupBox Grid.Row="2" Header="Новый автор" Margin="0,10,0,0">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <TextBox Grid.Row="0" Grid.Column="1"
                             x:Name="NewAuthorSurnameTextBox" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Имя" VerticalAlignment="Center" Margin="10,0,5,0" />
                    <TextBox Grid.Row="0" Grid.Column="3"
                             x:Name="NewAuthorNameTextBox" />
                    <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                            x:Name="AddNewAuthorButton" Content="Добавить"
                            Style="{StaticResource EditorButtonStyle}"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0" />
                </Grid>
            </GroupBox>
            <!-- Читает -->
            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Читает" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox Grid.Column="1"
                         x:Name="LectorTextBox" />
                <Button Grid.Column="2"
                        x:Name="PickLectorButton" Content="Выбрать"
                        Style="{StaticResource EditorButtonStyle}"
                        Margin="10,0,0,0" />
            </Grid>
            <!-- Комментарий -->
            <Grid Grid.Row="4" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Комментарий" VerticalAlignment="Center" />
                <TextBox Grid.Row="1" Grid.Column="0"
                         x:Name="CommentTextBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,4,0,0"
                         Text="Поиск предназначения, или Двадцать седьмая теорема этики" />
            </Grid>
            <!-- Файл -->
            <Grid Grid.Row="5" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Файл" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox Grid.Column="1"
                         x:Name="FileTextBox" />
                <Button Grid.Column="2"
                        x:Name="PickFileButton" Content="Выбрать"
                        Style="{StaticResource EditorButtonStyle}"
                        Margin="10,0,0,0" />
            </Grid>
        </Grid>

        <!-- Данные из тэга -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Заголовок и кнопка "Загрузить" -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Данные из тэга" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <Button Grid.Column="1" x:Name="LoadTagButton" Content="Загрузить"
                        Style="{StaticResource EditorButtonStyle}"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Click="LoadTagButton_Click" />
            </Grid>
            <!-- Данные -->
            <ScrollViewer Grid.Row="1" Margin="0,10,0,0" Padding="0,0,10,0">
                <StackPanel>
                    <!-- Название (Title) -->
                    <TextBlock Text="Название" />
                    <TextBox x:Name="TagTitle" TextWrapping="Wrap" IsReadOnly="True" Margin="0,4,0,0"
                             Text="Поиск предназначения, или Двадцать седьмая теорема этики" />
                    <!-- Автор (Artist) -->
                    <TextBlock Text="Автор" Margin="0,10,0,0" />
                    <TextBox x:Name="TagAuthor" TextWrapping="Wrap" IsReadOnly="True" Margin="0,4,0,0"
                             Text="Автор книги из тэга Автор книги из тэга Автор книги из тэга Автор книги из тэга" />
                    <!-- Комментарии (Comment, Description, Lyrics) -->
                    <TextBlock Text="Комментарии" Margin="0,10,0,0" />
                    <TextBox TextWrapping="Wrap" IsReadOnly="True" Margin="0,4,0,0"
                             Text="Комментарии книги из тэга Комментарии книги из тэга Комментарии книги из тэга" />
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Кнопки нижней части окна -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <Button x:Name="ChaptersButton" Content="Содержание"
                    Style="{StaticResource BottomButtonStyle}"
                    Click="ChaptersButton_Click" />
            <Button x:Name="BookmarksButton" Content="Закладки"
                    Style="{StaticResource BottomButtonStyle}"
                    Margin="10,0,0,0"
                    Click="BookmarksButton_Click" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить"
                    Style="{StaticResource BottomButtonStyle}"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click" />
            <Button x:Name="CancelButton" Content="Отмена"
                    Style="{StaticResource BottomButtonStyle}"
                    Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
