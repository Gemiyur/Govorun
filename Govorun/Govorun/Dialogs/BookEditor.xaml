<Window x:Class="Govorun.Dialogs.BookEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Govorun.Dialogs"
        mc:Ignorable="d"
        Title="Книга"
        Width="750" Height="550" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="BottomButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="85" />
                <Setter Property="Height" Value="25" />
            </Style>
            <Style x:Key="EditorButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="75" />
                <Setter Property="Height" Value="20" />
            </Style>
            <Style x:Key="TagTextBoxStyle" TargetType="TextBox">
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="IsReadOnly" Value="True" />
                <Setter Property="IsReadOnlyCaretVisible" Value="True" />
                <Setter Property="Margin" Value="0,4,0,0" />
                <Setter Property="Background" Value="AliceBlue" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <!-- Редактор -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!-- Название -->
            <GroupBox Grid.Row="0" Header="Название">
                <TextBox Grid.Row="1" Grid.Column="0"
                         x:Name="TitleTextBox"
                         VerticalAlignment="Center"
                         Margin="0,4,0,0"
                         TextChanged="TitleTextBox_TextChanged" />
            </GroupBox>
            <!-- Авторы -->
            <GroupBox Grid.Row="1" Header="Авторы" Margin="0,10,0,0">
                <Grid Margin="0,4,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ListBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                             x:Name="AuthorsListBox"
                             Height="65"
                             Margin="0,0,10,0"
                             SelectionMode="Multiple"
                             SelectionChanged="AuthorsListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NameLastFirst}" ToolTip="{Binding NameLastFirst}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Grid.Row="0" Grid.Column="1"
                            x:Name="PickAuthorsButton" Content="Выбрать"
                            Style="{StaticResource EditorButtonStyle}"
                            VerticalAlignment="Top"
                            Click="PickAuthorsButton_Click" />
                    <Button Grid.Row="1" Grid.Column="1"
                            x:Name="RemoveAuthorsButton" Content="Удалить"
                            IsEnabled="False"
                            Style="{StaticResource EditorButtonStyle}"
                            VerticalAlignment="Bottom"
                            Click="RemoveAuthorsButton_Click" />
                </Grid>
            </GroupBox>
            <!-- Новый автор -->
            <GroupBox Grid.Row="2" Header="Новый автор" Margin="0,10,0,0">
                <Grid Margin="0,4,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <TextBox Grid.Row="0" Grid.Column="1"
                             x:Name="NewAuthorLastNameTextBox"
                             TextChanged="NewAuthorLastNameTextBox_TextChanged" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Имя" VerticalAlignment="Center" Margin="10,0,5,0" />
                    <TextBox Grid.Row="0" Grid.Column="3"
                             x:Name="NewAuthorFirstNameTextBox"
                             TextChanged="NewAuthorFirstNameTextBox_TextChanged" />
                    <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                            x:Name="AddNewAuthorButton" Content="Добавить"
                            IsEnabled="False"
                            Style="{StaticResource EditorButtonStyle}"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0"
                            Click="AddNewAuthorButton_Click" />
                </Grid>
            </GroupBox>
            <!-- Читает -->
            <GroupBox Grid.Row="3" Header="Читает" Margin="0,10,0,0">
                <Grid Grid.Row="3" Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             x:Name="LectorTextBox" />
                    <Button Grid.Column="1"
                            x:Name="PickLectorButton" Content="Выбрать"
                            Style="{StaticResource EditorButtonStyle}"
                            Margin="10,0,0,0" Click="PickLectorButton_Click" />
                </Grid>
            </GroupBox>
            <!-- Комментарий -->
            <GroupBox Grid.Row="4" Header="Комментарий" Margin="0,10,0,0">
                <TextBox x:Name="CommentTextBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,4,0,0" />
            </GroupBox>
        </Grid>

        <!-- Данные из тэга -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!-- Файл книги не найден -->
            <TextBlock Grid.Row="0" x:Name="FileNotFoundTextBlock"
                       Text="* Файл книги не найден"
                       FontWeight="Bold"
                       Foreground="Red"
                       Margin="0,0,0,10" />
            <!-- Заголовок и кнопка "Загрузить" -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Данные из тэга"
                           HorizontalAlignment="Left" VerticalAlignment="Center" />
                <Button Grid.Column="1" x:Name="LoadTagButton" Content="Загрузить"
                        Style="{StaticResource EditorButtonStyle}"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Click="LoadTagButton_Click" />
            </Grid>
            <!-- Название (Title) -->
            <GroupBox Grid.Row="2" Header="Название" Margin="0,10,0,0">
                <TextBox x:Name="TagTitleTextBox"
                         Style="{StaticResource TagTextBoxStyle}" />
            </GroupBox>
            <!-- Автор (Artist) -->
            <GroupBox Grid.Row="3" Header="Автор" Margin="0,10,0,0">
                <TextBox x:Name="TagAuthorTextBox"
                         Style="{StaticResource TagTextBoxStyle}" />
            </GroupBox>
            <!-- Название альбома (Album) -->
            <GroupBox Grid.Row="4" Header="Название альбома" Margin="0,10,0,0">
                <TextBox x:Name="TagAlbumTitleTextBox"
                         Style="{StaticResource TagTextBoxStyle}" />
            </GroupBox>
            <!-- Автор альбома (AlbumArtist) -->
            <GroupBox Grid.Row="5" Header="Автор альбома" Margin="0,10,0,0">
                <TextBox x:Name="TagAlbumAuthorTextBox"
                         Style="{StaticResource TagTextBoxStyle}" />
            </GroupBox>
            <!-- Комментарии (Comment, Description, Lyrics) -->
            <GroupBox Grid.Row="6" Header="Комментарии" Margin="0,10,0,0">
                <TextBox x:Name="TagCommentsTextBox"
                         VerticalScrollBarVisibility="Auto"
                         Style="{StaticResource TagTextBoxStyle}" />
            </GroupBox>
        </Grid>

        <!-- Кнопки нижней части окна -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <Button x:Name="FileButton" Content="Файл"
                    Style="{StaticResource BottomButtonStyle}"
                    Click="FileButton_Click" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить"
                    IsEnabled="False"
                    Style="{StaticResource BottomButtonStyle}"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click" />
            <Button x:Name="CancelButton" Content="Отмена"
                    Style="{StaticResource BottomButtonStyle}"
                    Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
