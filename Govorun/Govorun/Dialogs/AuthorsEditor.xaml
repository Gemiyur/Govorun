<Window x:Class="Govorun.Dialogs.AuthorsEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Govorun.Dialogs"
        mc:Ignorable="d"
        Title="Авторы"
        Width="600" Height="500" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Closing="Window_Closing">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="75" />
                <Setter Property="Height" Value="25" />
            </Style>
            <Style x:Key="NameLabelStyle" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,10,0,0" />
            </Style>
            <Style x:Key="NameTextBlockStyle" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,2,0,0" />
            </Style>
            <Style x:Key="NameTextBoxStyle" TargetType="TextBox">
                <Setter Property="Margin" Value="0,4,0,0" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="185" />
        </Grid.ColumnDefinitions>

        <!-- Список авторов -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Список авторов" Margin="0,0,0,4" />
            <ListBox Grid.Row="1" x:Name="AuthorsListBox"
                     MouseDoubleClick="AuthorsListBox_MouseDoubleClick"
                     SelectionChanged="AuthorsListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding NameLastFirstMiddle}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <Button x:Name="EditButton" Content="Изменить"
                    Style="{StaticResource ButtonStyle}"
                    IsEnabled="False"
                    Click="EditButton_Click" />
            <Button x:Name="DeleteButton" Content="Удалить"
                    Style="{StaticResource ButtonStyle}"
                    IsEnabled="False"
                    Margin="10,0,0,0"
                    Click="DeleteButton_Click" />
        </StackPanel>

        <!-- Редактор автора -->
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Редактор автора">
                <StackPanel>
                    <GroupBox Header="Редактируется" Margin="0,4,0,0">
                        <StackPanel Background="{StaticResource TextBoxReadOnlyBackgroundBrush}">
                            <TextBlock x:Name="LastNameTextBlock" Style="{StaticResource NameTextBlockStyle}" />
                            <TextBlock x:Name="FirstNameTextBlock" Style="{StaticResource NameTextBlockStyle}" />
                            <TextBlock x:Name="MiddleNameTextBlock" Style="{StaticResource NameTextBlockStyle}" />
                        </StackPanel>
                    </GroupBox>
                    <TextBlock Text="Фамилия" Style="{StaticResource NameLabelStyle}" />
                    <TextBox x:Name="LastNameTextBox" Style="{StaticResource NameTextBoxStyle}"
                             TextChanged="LastNameTextBox_TextChanged" />
                    <TextBlock Text="Имя" Style="{StaticResource NameLabelStyle}" />
                    <TextBox x:Name="FirstNameTextBox" Style="{StaticResource NameTextBoxStyle}"
                             TextChanged="FirstNameTextBox_TextChanged" />
                    <TextBlock Text="Отчество" Style="{StaticResource NameLabelStyle}" />
                    <TextBox x:Name="MiddleNameTextBox" Style="{StaticResource NameTextBoxStyle}"
                             TextChanged="MiddleNameTextBox_TextChanged" />
                    <Grid Margin="0,25,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" x:Name="ClearButton" Content="Очистить"
                                Style="{StaticResource ButtonStyle}"
                                IsEnabled="False"
                                HorizontalAlignment="Left"
                                Click="ClearButton_Click" />
                        <Button Grid.Column="1" x:Name="SaveButton" Content="Сохранить"
                                Style="{StaticResource ButtonStyle}"
                                IsEnabled="False"
                                HorizontalAlignment="Right"
                                Click="SaveButton_Click" />
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Кнопка "Закрыть" -->
        <Button Grid.Row="2" Grid.Column="2"
                x:Name="CloseButton" Content="Закрыть"
                Style="{StaticResource ButtonStyle}"
                HorizontalAlignment="Right"
                Click="CloseButton_Click" />
    </Grid>
</Window>
