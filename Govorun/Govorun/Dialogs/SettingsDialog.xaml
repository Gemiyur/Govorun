<Window x:Class="Govorun.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Govorun.Dialogs"
        mc:Ignorable="d"
        Title="Настройки"
        Width="500" Height="410" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="75" />
                <Setter Property="Height" Value="25" />
            </Style>
            <Style x:Key="DbButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="70" />
            </Style>
            <Style x:Key="DbChangedStackPanelStyle" TargetType="StackPanel">
                <Setter Property="Margin" Value="0,4,0,0" />
            </Style>
            <Style x:Key="ParamCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Margin" Value="0,8,0,0" />
            </Style>
            <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="{StaticResource TextBoxReadOnlyBackgroundBrush}" />
                <Setter Property="IsReadOnly" Value="True" />
                <Setter Property="IsReadOnlyCaretVisible" Value="True" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" x:Name="SettingsTabControl" SelectionChanged="SettingsTabControl_SelectionChanged">
            <TabItem x:Name="InterfaceTabItem" Header="Интерфейс">
                <StackPanel Margin="10,0,0,0">
                    <CheckBox x:Name="LoadLastBookCheckBox"
                              Content="При запуске загружать в проигрыватель последнюю книгу"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="NavAuthorFullNameCheckBox"
                              Content="В панели навигации отображать полные имена авторов"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="BookListAuthorFullNameCheckBox"
                              Content="В списке книг отображать полные имена авторов"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="BookInfoAuthorFullNameCheckBox"
                              Content="В окне «О книге» отображать полные имена авторов"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="ChaptersAuthorFullNameCheckBox"
                              Content="В окне «Содержание» отображать полные имена авторов"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="BookmarksAuthorFullNameCheckBox"
                              Content="В окне «Закладки» отображать полные имена авторов"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="SaveMainWindowLocationCheckBox"
                              Content="Сохранять положение и размер окна приложения"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="SaveBookInfoWindowLocationCheckBox"
                              Content="Сохранять положение и размер окна «О книге»"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="SaveChaptersWindowLocationCheckBox"
                              Content="Сохранять положение и размер окна «Содержание»"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="SaveBookmarksWindowLocationCheckBox"
                              Content="Сохранять положение и размер окна «Закладки»"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="SaveAuthorWindowLocationCheckBox"
                              Content="Сохранять положение и размер окна «Об авторе»"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                    <CheckBox x:Name="SaveCycleWindowLocationCheckBox"
                              Content="Сохранять положение и размер окна «О серии»"
                              Style="{StaticResource ParamCheckBoxStyle}" />
                </StackPanel>
            </TabItem>

            <TabItem Header="Библиотека">
                <StackPanel Margin="4,0,4,0">
                    <GroupBox Header="Сжатие базы данных" Margin="0,10,0,0">
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Сжатие удалит неиспользуемое пространство из базы данных." />
                            <Button Grid.Column="1" x:Name="DbShrinkButton" Content="Сжать"
                                    Style="{StaticResource DbButtonStyle}"
                                    Margin="8,0,0,4"
                                    Click="DbShrinkButton_Click" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Файл базы данных" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="DbNameTextBox"
                                         Style="{StaticResource ReadOnlyTextBoxStyle}" />
                                <Button Grid.Column="1" x:Name="DbNameButton" Content="Изменить"
                                        Style="{StaticResource DbButtonStyle}"
                                        Margin="8,0,0,0"
                                        Click="DbNameButton_Click" />
                            </Grid>
                            <StackPanel Grid.Row="1" Grid.Column="0" x:Name="DbChangedStackPanel"
                                        Style="{StaticResource DbChangedStackPanelStyle}"
                                        Visibility="Collapsed">
                                <TextBlock Text="Файл базы данных был изменён." Foreground="Red" FontWeight="Bold" />
                                <TextBlock Text="Изменение вступит в силу при следующем запуске приложения." />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="0" x:Name="DbNotChangedStackPanel"
                                        Style="{StaticResource DbChangedStackPanelStyle}">
                                <TextBlock Text="Важно!" />
                                <TextBlock Text="При изменении файла базы данных надо будет перезапустить приложение." />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="ResetButton" Content="Сброс"
                    Style="{StaticResource ButtonStyle}"
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    ToolTip="Установить настройки по-умолчанию (текущая вкладка)"
                    Click="ResetButton_Click" />
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Margin="0,10,0,0">
                <Button x:Name="SaveButton" Content="Сохранить"
                        Style="{StaticResource ButtonStyle}"
                        Click="SaveButton_Click" />
                <Button x:Name="CancelButton" Content="Отмена"
                        Style="{StaticResource ButtonStyle}"
                        Margin="10,0,0,0"
                        Click="CancelButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
