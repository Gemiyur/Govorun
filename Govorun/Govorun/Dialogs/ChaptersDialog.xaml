<Window x:Class="Govorun.Dialogs.ChaptersDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Govorun.Dialogs"
        mc:Ignorable="d"
        Title="Содержание книги"
        Width="600" Height="500"
        MinWidth="500" MinHeight="350"
        d:Width="600" d:Height="350"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Closed="Window_Closed">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="90" />
                <Setter Property="Height" Value="25" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Авторы и название -->
        <TextBlock Grid.Row="0" x:Name="AuthorsTextBlock" Text="Авторы" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="1" x:Name="TitleTextBlock" Text="Название"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0" />

        <!-- Список глав книги -->
        <ListView Grid.Row="2" x:Name="ChaptersListView"
                  Margin="0,16,0,0" SelectionMode="Single"
                  SelectionChanged="ChaptersListView_SelectionChanged"
                  SizeChanged="ChaptersListView_SizeChanged">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Top" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="GridViewColumnHeader">
                            <Setter Property="IsEnabled" Value="False"/>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="TextElement.Foreground" Value="Black" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Header="Название">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Text="{Binding Title}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Позиция" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Text="{Binding StartTimeText}" TextAlignment="Right" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Время" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DurationText}" TextAlignment="Right" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Кнопки -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button x:Name="PlayButton" Content="Слушать"
                        IsEnabled="False"
                        Style="{StaticResource ButtonStyle}"
                        Click="PlayButton_Click" />
                <Button x:Name="EditButton" Content="Изменить"
                        IsEnabled="False"
                        Margin="10,0,0,0"
                        Style="{StaticResource ButtonStyle}"
                        Click="EditButton_Click" />
            </StackPanel>
            <Button Grid.Column="1" x:Name="CloseButton" Content="Закрыть"
                    HorizontalAlignment="Right"
                    IsCancel="True"
                    Style="{StaticResource ButtonStyle}"
                    Click="CloseButton_Click" />
        </Grid>
    </Grid>
</Window>
