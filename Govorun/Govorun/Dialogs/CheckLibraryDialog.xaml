<Window x:Class="Govorun.Dialogs.CheckLibraryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Govorun.Dialogs"
        mc:Ignorable="d"
        Title="Проверка библиотеки"
        Width="700" Height="350" ResizeMode="CanResizeWithGrip"
        MinWidth="500" MinHeight="300"
        d:Width="700" d:Height="350"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        SourceInitialized="Window_SourceInitialized">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="75" />
                <Setter Property="Height" Value="25" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Книги, у которых не найден файл" Margin="2,0,0,4" />

        <ListBox Grid.Row="1" x:Name="BooksListBox"
                 ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 SelectionChanged="BooksListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}"
                                   FontWeight="Bold"
                                   Padding="5,0,0,0"
                                   TextWrapping="Wrap" />
                        <TextBlock Text="{Binding AuthorNamesFirstLast}"
                                   FontStyle="Italic"
                                   Padding="25,0,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button x:Name="FileButton" Content="Файл"
                        Style="{StaticResource ButtonStyle}"
                        IsEnabled="False"
                        Click="FileButton_Click" />
                <Button x:Name="DeleteButton" Content="Удалить"
                        Style="{StaticResource ButtonStyle}"
                        IsEnabled="False"
                        Margin="10,0,0,0"
                        Click="DeleteButton_Click" />
            </StackPanel>
            <Button Grid.Column="1" x:Name="CloseButton" Content="Закрыть"
                    Style="{StaticResource ButtonStyle}"
                    IsCancel="True"
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click" />
        </Grid>
    </Grid>
</Window>
